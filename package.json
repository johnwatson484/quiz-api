{
  "name": "quiz-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:lint": "eslint",
    "test:debug": "vitest --inspect-brk",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext ts,css,njk --watch src --ignore dist --delay 1000ms --legacy-watch dist/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext ts,css,njk --watch src --ignore dist --delay 1000ms --legacy-watch dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch --sourceMap",
    "build:start": "npm run build && node dist/index.js",
    "docker:test": "npm run test:lint && mkdir -p test-output 2>/dev/null || true && docker compose -p quiz-api-test down -v && docker compose -f compose.yaml -f compose.test.yaml -p quiz-api-test run --build --rm quiz-api",
    "docker:test:watch": "docker compose -p quiz-api-test down -v && docker compose -f compose.yaml -f compose.test.yaml -f compose.test.watch.yaml -p quiz-api-test run --build --rm quiz-api"
  },
  "author": "John Watson",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.3.10",
    "@hapi/hoek": "11.0.7",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "hapi-pino": "12.1.0",
    "joi": "17.13.3",
    "log-timestamp": "0.3.0",
    "redis": "5.10.0",
    "typescript": "5.6.2"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/hapi__boom": "7.4.1",
    "@types/hapi__hapi": "20.0.13",
    "@types/hapi__hoek": "6.2.0",
    "@types/hapi-pino": "9.1.2",
    "@types/jest": "29.5.13",
    "@types/joi": "17.2.2",
    "@types/node": "22.13.10",
    "@vitest/coverage-v8": "4.0.15",
    "eslint": "9.39.1",
    "neostandard": "0.11.4",
    "nodemon": "3.1.4",
    "npm-run-all": "4.1.5",
    "vitest": "4.0.15"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
